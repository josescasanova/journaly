// These are your firebase security rules - put then in the "Security & Rules" tab of your 
{
    "rules": {
        // won't let people delete an existing journal
        ".write": "!data.exists()",
        ".read": true,
        "$room" : {
          // only the journal owner can edit the data
          ".write" : "newData.child('user').val() === auth.uid",
          ".read" : true
        }
    }
}

